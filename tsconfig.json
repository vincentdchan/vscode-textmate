{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"outDir": "out",
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"newLine": "lf",
		"lib": [
			"es5",
			"es2015.promise"
		]
	},
	"exclude": [
		"node_modules",
		"release",
		"out",
		"test-cases",
		"src/tests"
	]
}
